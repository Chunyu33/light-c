{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "LightC",
  "version": "2.0.0",
  "identifier": "com.chunyu.LightC",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1666",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "LightC",
        "width": 800,
        "height": 600,
        "minWidth": 600,
        "minHeight": 450,
        "center": true,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["msi"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDVEMDMzQzcwQkM2QjRCRUIKUldUclMydThjRHdEWFhnelhONmpBSHFDVVlQVWs4QjBUM3Iza3dMR2szdkkvOVBydVc1SWVrK0oK",
      "endpoints": [
        "https://github.com/Chunyu33/light-c/releases/latest/download/latest.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
